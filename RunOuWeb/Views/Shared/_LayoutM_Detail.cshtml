﻿@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<!-- Mirrored from www.zi-han.net/theme/hplus/ by HTTrack Website Copier/3.x [XR&CO'2014], Sun, 21 Jan 2018 10:17:11 GMT -->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>润欧表业有限公司</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="Bookmark" href="favicon.ico" />
    <link rel="shortcut icon" href="favicon.ico">
    <link href="/Contents/hplus/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="/Contents/hplus/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="/Contents/hplus/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
    <link href="/Contents/hplus/css/animate.min.css" rel="stylesheet">
    <link href="/Contents/layer/2.4/skin/layer.css" rel="stylesheet" />
    <!--showloading-->
    <link href="/Contents/hplus/css/plugins/showloading/showLoading.css" rel="stylesheet" />
    <link href="/Contents/hplus/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">
    <link href="/Contents/hplus/css/style.min.css?v=4.1.0" rel="stylesheet">
    <link href="/Contents/hplus/css/Popup.css" rel="stylesheet" />
    <!--公用的css-->
    <link href="/Contents/css/common.css?=20180312" rel="stylesheet" />
    @RenderSection("css", false)
    <style>
        .botfloat {
            padding: 10px;
            text-align: center;
            position: fixed;
            width: 100%;
            bottom: 0px;
            background-color: #fff;
            border-top: 1px solid #ddd;
        }
    </style>
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
</head>
<body class="gray-bg">
    <div class="border-bottom dropdown" style="position: fixed;width: 100%;z-index: 9;">
        <ul class="breadcrumb" style="padding: 10px 15px;">
            <li><a href="#">首页</a></li>
            @if (ViewBag.Nav != null)
            {
                string[] navs = ViewBag.Nav as string[];
                foreach (var item in navs)
                {
                    <li><a href="#">@item</a></li>
                }
            }
            <button class="btn btn-primary btn-sm pull-right" type="button" onclick="javascript: window.location = window.location;" title="刷新" style="margin-top:-6px;"><i class="fa fa-refresh"></i></button>
        </ul>
    </div>
    <div style='height:40px;'></div>
    <div class="wrapper wrapper-content">
        @RenderBody()<!-- /.page-content -->
    </div>
    <div>
        <div style='height:60px;'></div>
        <div class="botfloat">
            @RenderSection("buttons", required: false)

            @if (ViewBag.showClose == null || ViewBag.showClose)
            {
                <button class="btn btn-sm btn-danger" onclick="mainlayout_layer_close();"><i class="fa fa-remove"></i> 关闭</button>
            }
        </div>
    </div>
    <script src="/Contents/hplus/js/jquery.min.js?v=2.1.4"></script>
    <script src="/Contents/hplus/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="/Contents/hplus/js/bootbox.js"></script>
    @*<script src="/Content/hplus/js/content.min.js"></script>*@<!--右上侧显示首页图标-->
    <script src="/Contents/hplus/js/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="/Contents/hplus/js/plugins/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="/Contents/hplus/js/plugins/bootstrap-table/bootstrap-table-mobile.min.js"></script>
    <script src="/Contents/hplus/js/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
    <script src="/Contents/hplus/js/plugins/showloading/jquery.showLoading.min.js"></script>
    <script src="/Contents/hplus/js/plugins/validate/jquery.validate.min.js"></script>
    <script src="/Contents/hplus/js/plugins/validate/jquery.validate.unobtrusive.min.js"></script>

    <!--弹出框layer 控件-->
    <script src="/Contents/layer/2.4/layer.js"></script>
    <!--日期控件laydate-->
    <script src="~/Contents/hplus/js/plugins/layer/laydate v5.0.9/laydate.js" type="text/javascript"></script>
    <!--表格数据导出控件-->
    <script src="/Contents/hplus/js/export/tableExport.js"></script>
    <script src="/Contents/hplus/js/export/bootstrap-table-export.js"></script>
    <!--常用js方法-->
    <script src="/Contents/js/common.js?=201801251445"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $.ajaxSetup({ cache: false });

        function mainlayout_replace() {
            location.replace(location.href);

            layer.load(1, {
                shade: [0.5, '#fff'],
                time: 50000,
                end: function () {
                    layer.msg('网络异常，请稍后再试!');
                }
            });
        }

        function mainlayout_layer_close() {
            layer_close();
        }

    </script>
</body>
</html>
